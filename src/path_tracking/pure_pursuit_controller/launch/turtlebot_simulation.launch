<launch>
    <arg name="use_sim" default="true" doc="true: use Gazebo simulation, false: use fake node"/>
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="TurtleBot3 model [burger, waffle, waffle_pi]"/>
    <arg name="x_pos" default="0.0"/>
    <arg name="y_pos" default="0.0"/>
    <arg name="z_pos" default="0.0"/>

    <!-- ==== Gazebo Simulation: Physical simulation ==== -->
    <group if="$(arg use_sim)">
        <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/empty.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        </include>

        <!-- Load URDF description -->
        <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro"/>

        <!-- Generate Robot -->
        <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"
              args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>

        <!-- Publish joint_states and tf -->
        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
            <param name="publish_frequency" type="double" value="50.0"/>
        </node>
    </group>

    <!-- ==== Fake Model: Start turtlebot3_fake_node (fake TF + odom) ==== -->
    <group unless="$(arg use_sim)">
        <node pkg="turtlebot3_fake" type="turtlebot3_fake_node" name="turtlebot3_fake_node" output="screen"/>
    </group>

    <!-- RViz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find pure_pursuit_controller)/config/rviz/tracking.rviz" output="screen"/>
</launch>
