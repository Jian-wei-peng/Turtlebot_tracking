<launch>
    <!-- 设置地图的配置文件 -->
    <arg name="map" default="myworld.yaml" />

    <!-- 运行地图服务器，并且加载设置的地图-->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find myrobot)/maps/$(arg map)"/>

    <!-- 启动AMCL节点 -->
    <include file="$(find myrobot)/launch/myrobot_amcl.launch" />

    <!-- 运行move_base节点 -->
    <include file="$(find myrobot)/launch/myrobot_move_base.launch" />

    <!-- 运行rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find myrobot)/rviz/myrobot.rviz" />

</launch>